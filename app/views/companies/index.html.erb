<div class="row mb-3">
  <div class="col-9">
    <h1 class='display-5'>Empresas</h1>
  </div>
  <div class="col-3 mt-4 text-center">
    <%= link_to t("links.new"), new_company_path, class: "btn btn-success text-center m-2" %>
    <%= link_to "Exportar CSV", export_csv_companies_path, class: "btn btn-light border shadow-sm text-center m-2" %>
  </div>
</div>

<% if @companies.any? %>
  <table class="table table-striped table-hover border col-12">
    <thead>
      <tr>
        <th><%= @companies.human_attribute_name(:name) %></th>
        <th><%= @companies.human_attribute_name(:cnpj) %></th>
        <th><%= @companies.human_attribute_name(:email) %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @companies.each do |company| %>
        <tr>
          <td><%= company.name %></td>
          <td><%= company.cnpj %></td>
          <td><%= company.email %></td>
          <td><%= link_to t("links.show"), company, class: "link-secondary" %></td>
          <td><%= link_to t("links.edit"), edit_company_path(company), class: "link-secondary" %></td>
          <td><%= link_to t("links.destroy"), company, method: :delete, class: "link-secondary", data: { confirm: "Os RHs e projetos associados a empresa #{company.name} tambÃ©m serÃ£o apagados, tem certeza?" } %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p> Nenhuma empresa foi cadastrada ainda. <p>
<% end %>


