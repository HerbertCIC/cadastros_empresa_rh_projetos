<div class="d-flex mb-3 px-3">
  <div class="col-10">
    <h1><%= Company.model_name.human %></h1>
  </div>
  <div class="col-2 text-center">
    <%= link_to t("links.new"), new_company_path, class: "btn btn-success text-center m-2" %>
  </div>
</div>

<table class="table table-hover border col-12">
  <thead class="table-secondary">
    <tr>
      <th><%= @companies.human_attribute_name(:description) %></th>
      <th><%= @companies.human_attribute_name(:cnpj) %></th>
      <th><%= @companies.human_attribute_name(:email) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.description %></td>
        <td><%= company.cnpj %></td>
        <td><%= company.email %></td>
        <td><%= link_to t("links.show"), company, class: "btn btn-sm btn-secondary" %></td>
        <td><%= link_to t("links.edit"), edit_company_path(company), class: "btn btn-sm btn-primary" %></td>
        <td><%= link_to t("links.destroy"), company, method: :delete, class: "btn btn-sm  btn-danger", data: { confirm: t("messages.confirm") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


