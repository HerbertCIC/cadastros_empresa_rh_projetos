<%= form_with(model: company) do |form| %>
  <div class="mb-3">
    <%= form.label :description %>
    <%= form.text_field :description, class: "form-control", placeholder: "Company Name" %>
  </div>
 
  <div class="mb-3">
    <%= form.label :cnpj %>
    <%= form.text_field :cnpj, class: "form-control", placeholder: "00.000.000/0000-00" %>
  </div>

  <div class="mb-3">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", placeholder: "example@domain.com" %>
  </div>

  <div class="mb-3 text-end">
    <%= form.submit nil, class: "btn btn-success" %>
  </div>
<% end %>
