<%= link_to image_tag("back.png", size: "15"), companies_path, class: "btn btn btn-secondary opacity-50 btn-sm mb-3" %>

<p>
  <strong>Nome:</strong>
  <%= @company.name %>
</p>

<p>
  <strong>CNPJ:</strong>
  <%= @company.cnpj %>
</p>

<p>
  <strong>Email:</strong>
  <%= @company.email %>
</p>

<p>
  <strong>Nome do contato:</strong>
  <%= @company.contact_name %>
</p>

<p>
  <strong>Email do contato:</strong>
  <%= @company.contact_email %>
</p>



<% if @projects.any? %>
  <%= render "project", projects: @projects %>
<% end %> 

<% if @human_resources.any? %>        
  <%= render "human_resource", human_resources: @human_resources %> 
<% end %>         

<br>
<div class="mb-3">
  <%= link_to t("links.edit"), edit_company_path(@company), class: "btn btn-primary" %>
</div>

