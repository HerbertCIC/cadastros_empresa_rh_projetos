<h2 class="text-center">Cadastrar-se</h2></br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="mb-3">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "Nome" %>
  </div>

  <div class="mb-3">
    <%= f.text_field :username, autocomplete: "username", class: "form-control", placeholder: "Nome de usuário" %>
  </div>

  <div class="mb-3">
    <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "Email" %>
  </div>

  <div class="mb-3">    
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Senha" %>
    <% if @minimum_password_length %>
    <em>(mínimo de <%= @minimum_password_length %> caracteres)</em>
    <% end %></br>
  </div>

  <div class="mb-3">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Senha (confirmação)" %>
  </div>

  <div class="actions mb-3 text-center"></br>
    <%= f.submit "Cadastrar", class: "btn btn-outline-secondary" %>
  </div>
<% end %>

<div class="mb-3 text-center"> Já é cadastrado? <%= render "devise/shared/links" %></div>
