<div><%= link_to image_tag("back.png", size: "15"), root_path, class: "btn btn btn-secondary opacity-50 btn-sm mb-3" %></div>
<h2 class="text-center">Editar Usuário</h2></br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

  <div class="mb-3">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "Nome" %>
  </div>

  <div class="mb-3">
    <%= f.text_field :username, autocomplete: "username", class: "form-control", placeholder: "Nome de usuário" %>
  </div>

  <div class="mb-3">
    <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "Email cadastrado" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="mb-3">
    <% if @minimum_password_length %>
      <em>mínimo de <%= @minimum_password_length %> caracteres</em>
    <% end %>
    <i>(deixe em branco caso não queira alterar)<i>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Senha" %>
  </div>

  <div class="mb-3">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Senha (confirmação)" %>
  </div>

  <div class="mb-3">
    <i>(digite a senha atual para confirmar as alterações)</i>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder: "Senha atual" %>
  </div>

  <div class="mb-5 p-3">
    <%= f.submit "Atualizar", class: "btn btn-success text-center" %>
  </div>
<% end %>

<h4 class="text-center mb-3">Cancelar conta</h4>

<div class="mb-5 text-center">
<%= button_to "Cancelar", registration_path(resource_name), data: { confirm: "Tem certeza?" }, method: :delete, class: "btn btn-danger" %></p>
</div>


