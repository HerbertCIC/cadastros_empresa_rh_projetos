
  <h2 class="text-center">Log In</h2></br>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-3">

        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
      </div>

      <div class="mb-3">

        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Senha" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-3 form-check">
          <%= f.check_box :remember_me, class: "form-check-label" %>
          <%= f.label :remember_me, class: "form-check-label" %>
        </div>
      <% end %>

      <div class="actions mb-3 text-center">
        <%= f.submit "Entrar", class: "btn btn-outline-secondary" %>
      </div>
  <% end %>


  <div class="mb-3 text-center"><%= render "devise/shared/links" %></div>
